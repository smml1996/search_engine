{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="container" style="height: 70vh;">
        <div class="row" style="height: 100%;">

            <!-- begin div input search -->
            <div class="col-5 align-middle" style="margin-top: auto; margin-bottom: auto; border-right: rgba(136,14,19,0.8);border-right-style: dashed;">
                {{ form_start(form) }}
                {{ form_widget(form) }}

                <button class="btn btn-success ">{{ button_label|default('Buscar') }}</button>
                {{ form_end(form) }}
            </div>

            <!-- Begin div results-->
            <div class="col-7" style="margin-top: auto; margin-bottom: auto;overflow-y: scroll; max-height: 70vh;">
                {% for web in webpages %}
                    <div class="card" style="margin-top: 1em; margin-bottom: 1em;">
                        <div class="card-header text-center">
                            Pagerank: {{ web.pagerank }}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ web.title }}...</h5>
                            <p class="card-text">{{ web.description }}</p>
                            <a href="{{ web.url }}" target="_blank" class="btn btn-primary">Visitar URL</a>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>


    </div>


{% endblock %}
